@model Presentation.Models.ProductsListViewModel

<h1>Products Catalogue</h1>




<form method="post" action="/Products/Search"  >
    <div>
        <table>
            <tr>
                <td>Search for product</td>
                <td>
                    <input type="text" class="form-control" name="keyword" />

                    <select name="category" class="form-control">
                        <option value="-1">Any category</option>
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                
                </td>
            </tr>
        </table>

        <input type="submit" value="Search" />
    </div>
</form>


<hr />

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model.Products)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">

                <img class="card-img-top"
                src="@(string.IsNullOrEmpty(product.ImagePath)
                        ? Url.Content("~/images/default.jpg")
                        : product.ImagePath)"
                alt="@product.Name"
                style="height:200px; object-fit:cover;" />

                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>

                    <p class="card-text">
                        <strong>Price:</strong> €@product.Price
                    </p>
                </div>

                <div class="card-footer bg-transparent border-0">
                    <a href="/Products/Details/@product.Id" class="btn btn-primary w-100">
                        View Details
                    </a>
                </div>

            </div>
        </div>
    }
</div>

<div class="mt-3">
    @{
        int nextPage = ViewBag.CurrentPage != null
        ? (int)ViewBag.CurrentPage + 1
        : 2;

        bool showNextButton = ((ViewBag.PageSize - ViewBag.TotalItemsFetched) > 0) ? false : true;

        int previousPage = ViewBag.CurrentPage - 1;

        bool showPreviousButton = ViewBag.CurrentPage == 1 ? false : true;
    }

    @if (showPreviousButton)
    {
        <a href="/Products/Index?page=@previousPage
        "
        class="btn btn-primary">
            « Previous
        </a>
    }
    @if (showNextButton)
    {
        <a href="/Products/Index?page=@nextPage
        "
        class="btn btn-primary">
            Next »
        </a>
    }
    

</div>


